<div id="notification-bag">
    {% for flashMessage in app.session.flashbag.get('notice') %}
        <div class="flash-notice" data-name="info">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="flash-error" data-name="error">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('warning') %}
        <div class="flash-warning" data-name="warn">{{ flashMessage }}</div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="flash-success" data-name="success">{{ flashMessage }}</div>
    {% endfor %}
</div>