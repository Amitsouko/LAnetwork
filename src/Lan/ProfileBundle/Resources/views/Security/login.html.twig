{% extends "LanCoreBundle::layout.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block main %}
<div class="register">
<div class="container">
    <div class="row">
        <div class="col-sm-push-2 col-md-push-3 col-sm-8 col-md-6">
            <h1>Connexion</h1>
            <div class="whiteBox">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    <div class="form-group">
                        <label for="username">{{ 'security.login.username'|trans }}</label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                    <div class="form-group">
                        <label for="password">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" name="_password" required="required" />
                    </div>
                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div> 
                        <input class="btn btn-success btn-flat" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />  <a href="{{ path("fos_user_registration_register") }}">Cr√©er un compte</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</div>
{% endblock main %}
