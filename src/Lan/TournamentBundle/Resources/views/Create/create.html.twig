{% extends "LanCoreBundle::layout.html.twig" %}

{% block main %}
<div class="register">
<div class="container">
    <div class="row">
        <div class="col-sm-push-2 col-md-push-3 col-sm-8 col-md-6">
            <h1>Créer un tournoi</h1>
            <div class="whiteBox">


            <form action="{{ path('lan_tournament_create_create') }}" {{ form_enctype(form) }} method="POST" class="lan_tournament_create_create">
                <div class="form-group">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                </div>
               <div class="form-group">
                       {{ form_label(form.description) }}
                       {{ form_widget(form.description) }}
               </div>

                <div class="form-group">
                       {{ form_label(form.type) }}
                       {{ form_widget(form.type) }}
               </div>                

               <div class="hidden">
                {{ form_widget(form) }}
                 
               </div>
                <div class="">
                    <a class="btn" href="{{ path("fos_user_profile_show") }}">Annuler</a>
                    <input class="btn btn-success btn-flat" type="submit" value="Créer le tournoi" /> 
                </div>
            </form>


            </div>
        </div>
    </div>
</div>

</div>
{% endblock main %}