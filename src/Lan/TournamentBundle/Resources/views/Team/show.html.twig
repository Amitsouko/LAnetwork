{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Team</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Victories</th>
                <td>{{ entity.victories }}</td>
            </tr>
            <tr>
                <th>Defeats</th>
                <td>{{ entity.defeats }}</td>
            </tr>
            <tr>
                <th>Draws</th>
                <td>{{ entity.draws }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('admin_team') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('admin_team_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
